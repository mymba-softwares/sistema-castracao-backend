{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "outputPath": "dist",
    "assets": [
      {
        "include": "**/*.json",
        "exclude": "**/tsconfig*.json",
        "watchAssets": true
      }
    ]
  }
}
